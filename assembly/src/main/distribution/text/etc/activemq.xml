<beans xmlns:amq="http://activemq.org/config/1.0">
  
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" />

  <!-- ActiveMQ JMS Broker configuration -->
  <bean id="broker" class="org.apache.activemq.xbean.XBeanBrokerService">
	<property name="useShutdownHook" value="false" />

    <!-- Disable creation of the jmx connector 
         which is created in the jmx.xml configuration file -->
    <property name="managementContext">
      <bean class="org.apache.activemq.broker.jmx.ManagementContext">
        <property name="createConnector" value="false" />
      </bean>
    </property>

    <!-- Use journaled Kaha persistence -->
    <property name="persistenceAdapter">
      <bean class="org.apache.activemq.store.kahadaptor.KahaPersistenceAdapter">
	    <property name="directory" value="${servicemix.base}/data/amq" />
	    <property name="maxDataFileLength" value="33554432" />
	  </bean>
    </property>
  
    <property name="transportConnectors">
       <!-- Activate a TCP connector -->
       <bean class="org.apache.activemq.broker.TransportConnector">
	     <property name="uri" value="tcp://localhost:61616" />
	   </bean>
    </property>
    
    <!--  
    <property name="networkConnectors">
      <amq:networkConnector uri="static://(tcp://host1:61616,tcp://host2:61616)"/>
    </property>
    -->
    
  </bean>

</beans>
